<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="425dp"
        android:layout_height="294dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="-10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bia2" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="-50dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        android:layout_width="150dp"
        android:src="@drawable/default_avatar"
        android:layout_height="150dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#424343"
        />

    <EditText
        android:id="@+id/ename"
        android:layout_width="309dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/xanhdam"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar"
        android:padding="10dp"
        android:hint="nhap ten "/>

    <EditText
        android:id="@+id/enghenghiep"
        app:layout_constraintTop_toBottomOf="@+id/ename"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text=""
        android:textColor="@color/xanhdam"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_width="309dp"
        android:layout_height="52dp"
        android:background="@drawable/edittext_background"/>

    <Button
        android:id="@+id/btnupdateaccount"
        android:background="@drawable/login_background"
        android:layout_width="300dp"
        android:text="Cập nhật"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>