<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/bg_send_mess"
        android:maxWidth="310dp"
        android:maxHeight="400dp"
        android:minHeight="30dp"
        android:id="@+id/constraint">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="18dp" />

        <TextView
            android:id="@+id/sendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            android:inputType="textLongMessage|textMultiLine"
            android:maxWidth="270dp"
            android:minWidth="50dp"
            android:text="hhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"
            app:layout_constraintBottom_toTopOf="@+id/timerSend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintVertical_bias="0.5"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/image"
            android:src="@drawable/avatar2"
            android:layout_width="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline"
            app:layout_constraintBottom_toTopOf="@id/sendText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitCenter"
            android:minWidth="50dp"
            android:maxWidth="270dp"
            android:visibility="gone"
            android:layout_height="150dp"/>
        <TextView
            android:id="@+id/timerSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="12:00pm"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/icon"
        android:visibility="gone"

        android:layout_marginTop="-10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_gray_like"
        android:layout_alignLeft="@id/constraint"
        android:layout_below="@id/constraint"/>
    <ImageButton
        android:id="@+id/btndownload"
        android:visibility="gone"
        android:layout_marginTop="-10dp"
        android:layout_width="20dp"
        android:background="@drawable/button"
        android:layout_height="20dp"
        android:padding="5dp"
        android:src="@drawable/icon_download"
        android:layout_alignLeft="@id/constraint"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-11dp"/>
</RelativeLayout>